            }
            @keyframes spin {
              0% { transform: rotate(0deg); }
              100% { transform: rotate(360deg); }
            }
            .vton-result {
              margin-top: 16px;
              display: none;
            }
            .vton-result.active {
              display: block;
            }
            .vton-result img {
              width: 100%;
              border-radius: 8px;
            }
